@model IEnumerable<VaccinationReservationPlatForm.Models.Work2ViewModel>
@{
    ViewData["Title"] = "VWorkingPage";
}
<head>    
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />  
    <style>
        .List {
            padding-top:20px;
            float: left;
            height: 500px;
            width: 40%;
            padding-right: 20px;
        }

        .detail {
            padding-top: 20px;
            float: left;
            height: 500px;
            width: 20%;
            border-left: 3px solid #D3D3D3;
            padding-left: 20px;
        }
        h1 {
            padding-bottom: 20px;
            text-align: center;
        }
        .btn {
            background-color: white;
            border: none;
            font-size: 20px;
        }

        .lb {
            font-size: 24px;
            padding-right: 20px;
            font-weight: bold;
            color: dodgerblue;
        }
        .f4 {
            margin-left: 5px;
            margin-right: 5px;
            width: calc(60%- 10px)
        }
        .suchdiv{
            width:90%;
            padding-bottom:15px;
            display:flex;
            justify-content:center;
        }
    </style>
</head>

<h1>疫苗施打作業</h1>
<form method="post" action="" data-ajax="true">
    @*<div>*@
        <div class="suchdiv">
            <label class="lb">日期 : @ViewBag.date</label>
            <label class="lb">疫苗 : @ViewBag.vName</label>
            <label style="font-size:24px;font-weight:bold;color:dodgerblue">疫苗批號 : </label>
            <div class="f4">
                @Html.DropDownList("vSerialN", (IEnumerable<SelectListItem>)ViewBag.vn, new { @class = "form-control" })
            </div>
        </div>
        <div class="suchdiv">
            <div class="List">
                <table class="table">
                    <thead>
                        <tr>
                            <th>序</th>
                            <th>預約人</th>
                            <th>號碼</th>
                            <th>狀態</th>
                            <th>疫苗批號</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 0;
                            foreach (var w2 in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@Html.DisplayFor(modelItem => w2.PersonName)</td>
                                    <td>@Html.DisplayFor(modelItem => w2.Vbnumber)</td>
                                    <td>@Html.DisplayFor(modelItem => w2.VbcheckRemark)</td>
                                    <td>@Html.DisplayFor(modelItem => w2.VaccineSerialNumber)</td>
                                    <td>
                                        @Html.ActionLink("詳細", "VWorkingPage", "VaccinationHospital", new { PId = w2.PersonId }, null)
                                        @*<button id="showlist" type="button" data-pid="@w2.PersonId"><i class="far fa-edit"></i></button>*@
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="detail">
                @{
                    foreach (var w2 in Model.Where(w => w.PersonId == ViewBag.thisone))
                    {
                        <p>預約人 : @Html.DisplayFor(modelItem => w2.PersonName)</p>
                        <p>身分證 : @Html.DisplayFor(modelItem => w2.PersonIdentityId)</p>
                        <p>預約時段 : @Html.DisplayFor(modelItem => w2.VbbookingTime)</p>
                        <p>狀態 : @Html.DisplayFor(modelItem => w2.VbcheckRemark)</p>
                        <p>疫苗批號 : @Html.DisplayFor(modelItem => w2.VaccineSerialNumber)</p>
                        <p>下次預約時間 : @Html.DisplayFor(modelItem => w2.VbappointmentDate)</p>
                        <input type="hidden" name="stateEditID" value="@Html.DisplayFor(stateEdit => w2.PersonId)" />
                        <input type="submit" value="回復" formaction="Work5" class="btn btn-outline-warning" />
                        <input type="submit" id="absence" value="未到" formaction="Absence" class="btn btn-outline-danger" />
                        <button type="submit" id="success" formaction="VSucceed" class="btn btn-outline-success">施打</button>
                    }
                }
            </div>
        </div>
    @*</div>*@
    <div style="text-align:center;width:100%;">
        <button type="submit" id="Next" formaction="FinalPage" class="btn btn-outline-primary">下一頁</button>
    </div>
</form>

