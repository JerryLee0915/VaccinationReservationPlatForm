                <td><div class="col-4"><input type="text" id="messageInput" /></div></td>
            </tr>
            <tr>
                <td colspan="2"><input type="button" id="sendButton" value="Send Message" /></td>
            </tr>
            <tr>
                <td colspan="2"></td>
            </tr>
            <tr>
                <td colspan="2">
                    <ul id="messagesList"></ul>
                </td>
            </tr>
        </table>
</div>


